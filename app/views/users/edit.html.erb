<%= link_to("<<Back to list", user_path, class: 'back-link')%>

<div class="users edit">
  <h2> Update user </h2>
    <%= form_for @user, url: users_path, html: { multipart: true } do |f| %>
    <table summary="Users form fields">
      <tr>
        <th> Full name</th>
        <td first_name ><%= f.text_field(:first_name) %></td>
        <td><%= f.text_field(:last_name) %></td>
      </tr>
      <tr>
        <th> Phone </th>
        <td><%= f.text_field(:phone) %></td>
      </tr>
      <tr>
        <th> Notes </th>
        <td><%= f.text_field(:notes) %></td>
      </tr>
    </table>

    <%= f.file_field :avatar_file %>

  <div class="actions" >
    <%= f.submit "Update User" %>
  </div>
  <% end %>
</div>
