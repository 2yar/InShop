<div class="product show">
  <h2> Your details </h2>
  <table summary="Products details views">
    <tr>
      <th>name</th>
      <td><%= @product.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @product.description %></td>
    </tr>
    <tr>
      <th>Image</th>
      <td><%= link_to image_tag(@product.image.url(:med)), @product.image.url %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= @product.price %></td>
    </tr>
    <tr>
      <th> Updated </th>
      <td><%= @product.updated_at %></td>
    </tr>
  </table>
</div>

<%= link_to("Back to list", products_path, class: 'back-link')%>
