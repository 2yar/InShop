<%= form_for :products, url: products_path, html: { multipart: true } do |f| %>
    
	 <div class="field">
	 <%= f.label :name%><br>
	 <%= f.text_field :name %>
	 </div>
	 <div class="field">
	 <%= f.label :description %><br>
	 <%= f.text_area :description, rows: 6 %>
	 </div>
	 <div class="field">
	 <%= f.label :image_file %><br>
	 <%= f.text_field :image_file %>
	 </div>
	 <div class="field">
	 <%= f.label :price %><br>
	 <%= f.text_field :price %>
	 </div>
	 <div class="actions">
	 <%= f.submit %>
	 </div>
<% end %>